{
  "name": "shadcn-starter",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "clean": "rimraf node_modules dist",
    "dev": "vite",
    "fix": "run-s _lint:fix _format:fix",
    "lint": "run-s _lint _format",
