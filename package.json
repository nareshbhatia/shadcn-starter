    "react-dom": "^19.0.0",
    "react-router": "^7.2.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.8",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@code-shaper/eslint-config": "^2.*",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.57.1",
    "npm-run-all": "^4.1.5",
